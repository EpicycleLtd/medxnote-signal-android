<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:paddingEnd="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <com.medxnote.securesms.components.emoji.EmojiTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_700"
        android:maxLines="1"
        tools:text="Jules Bonnot"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/delete"
        android:layout_toStartOf="@+id/delete"
        android:textSize="18sp" />

    <com.medxnote.securesms.components.emoji.EmojiTextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_500"
        android:maxLines="1"
        tools:text="+38 095 0000 000"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/delete"
        android:layout_toStartOf="@+id/delete"
        android:layout_below="@+id/name"
        android:textSize="14sp" />

    <ImageButton android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:src="@mipmap/ic_delete_black"
        android:contentDescription="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/admin_status"
        android:layout_toStartOf="@+id/admin_status" />

    <ImageButton android:id="@+id/admin_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:src="@mipmap/ic_not_admin"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/app_name"/>

</RelativeLayout>